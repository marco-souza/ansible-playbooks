#! /usr/bin/env zsh

mcd() { mkdir $1; cd $1; }

# kill
tid() {
    ps -ax | grep -i $1 | grep -v 0:00.00 | awk '{ print $1 }' | uniq
}
ak() { kill -9 $(tid $1) }

# volume
vol() { pactl -- set-sink-volume 0 $1% }

export VOLUME=100
vu() { vol +10 }
vd() { vol -10 }

tvol() {
    if [ $VOLUME = 100 ]; then
        export VOLUME=150
    else
        export VOLUME=100
    fi
    vol $VOLUME
}

# Distrobox
ax() { distrobox-export -a $1; }
bx() { distrobox-export -b $(which $1) -ep $HOME/.local/bin/; }

# Workon (tmux)
workon() {
  [ ! -d $1 ] && mkdir $1;

  if [ -e $1/.env.sh ]; then
    tmux neww -c $1 "source $1/.env.sh; zsh"
  fi

  tmux neww -c $1
}

# Git
mug() { gco $1 && gl && gco - && gm $1 }

rug() { gco $1 && gl && gco - && grb $1 }
